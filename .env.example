# ===========================================
# OGA Local Service Atlas - Environment Config
# ===========================================
# Copy this file to .env and fill in the values

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production

# Database (PostgreSQL + PostGIS)
POSTGRES_DB=oga_atlas
POSTGRES_USER=oga_user
POSTGRES_PASSWORD=oga_password
DATABASE_URL=postgis://oga_user:oga_password@localhost:5432/oga_atlas

# Redis (Cache & Celery)
REDIS_URL=redis://localhost:6379/0

